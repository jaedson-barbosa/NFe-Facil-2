{
  "extends": "./node_modules/@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@form/*": ["src/form/*"],
      "@app/*": ["src/app/*"]
    },
    "lib": ["ESNext","DOM"]
  }
}